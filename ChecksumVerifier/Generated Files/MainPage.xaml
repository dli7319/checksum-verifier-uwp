<Page
    x:Class="ChecksumVerifier.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChecksumVerifier"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel x:ConnectionId='1' x:Name="contentPanel" Margin="30,30,30,30">
            <TextBlock HorizontalAlignment="Left" Text="Checksum Verifier" FontSize="72" Style="{ThemeResource HeaderTextBlockStyle}"/>
            <StackPanel x:ConnectionId='2' x:Name="checksumsPanel">
                <StackPanel Orientation="Horizontal" Width="Auto">
                    <TextBlock Width="120"/>
                    <TextBlock Text="File" Width="100"/>
                    <TextBox x:ConnectionId='6' x:Name="filePathText" PlaceholderText="File Path" Width="600"/>
                    <Button x:ConnectionId='7' x:Name="fileBrowseButton" Content="Browse" Width="100"                        />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Width="1440">
                    <CheckBox x:ConnectionId='3' x:Name="md5Checkbox" IsChecked="True"                         />
                    <TextBlock Text="MD5" Width="100"/>
                    <TextBox x:ConnectionId='4' x:Name="md5Text" PlaceholderText="MD5 Checksum" Width="600"/>
                    <Button x:ConnectionId='5' x:Name="md5CopyButton" Content="Copy" Width="100"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

